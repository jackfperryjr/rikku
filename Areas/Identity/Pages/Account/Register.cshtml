@page
@model RegisterModel

<h1 class="top-margin"></h1>
<div class="row" style="margin:0; text-align:center;">
    <div class="col-md-4 margin-auto" style="margin:0 15%;padding-bottom:20px;">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <img src="~/icons/ffapp/ff-circle-192.png" style="height:70px;width:70px;margin:0 auto;" />
            <h4>Create a new account</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" style="border-radius:25px!important;" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" style="border-radius:25px!important;" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" style="border-radius:25px!important;" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.BirthDate"></label>
                <input asp-for="Input.BirthDate" class="form-control" style="border-radius:25px!important;" />
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" style="border-radius:25px!important;" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" style="border-radius:25px!important;" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:100%;">Register</button>
        </form>
    </div>
</div>
